@model IEnumerable<MVCTaller.Models.Vehiculos>

@{
    //con este contador n, lo que hace es crear columnas y al final una fila
    int n=0;
}
@foreach (var item in Model)
{
    //si n es multiplo de 3 entonces , le sumo 1 a n
    //n=0 abro fila pinto la ficha, n=1
    if (n % 3 == 0)
    {
        //
      @Html.Raw("<div class=\"row\">")  
            }
            <div class="col-md-4">
                <h2>@item.matricula</h2>
                <h2>@item.marca @item.modelo</h2>
                <p>@item.pcoste</p>

            </div>
            //pre incremento y post incremento, aqui realiza un preincremento
            if (++n % 3 == 0 || n == Model.Count())
            {
                @Html.Raw("</div>")
            }
        
    }
}